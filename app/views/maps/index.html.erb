the latter case, uncomment the style above to make sure the custom elements gets block display	-->
<div ng-controller="tripMapController as tripMapCtlr">
	<!-- <ui-gmap-google-map class="span8"
	center="map.center"
	zoom="map.zoom"
	dragging="map.dragging"
	bounds="map.bounds"
	events="map.events"
	options="map.options"
	pan="true"
	control="map.control"
	>
	style="height: 500px; width: 500px;"

	</ui-gmap-google-map> -->

	<div>
		<ui-gmap-google-map
		center="tripMapCtlr.map.center"
		zoom="tripMapCtlr.map.zoom"
		control="tripMapCtlr.map.control"
		events="tripMapCtlr.map.events"
		bounds="tripMapCtlr.map.bounds"
		options="tripMapCtlr.map.options"
		>

		</ui-gmap-google-map>
	</div>
	<!-- palette album -->
	<div ng-controller="paletteAlbumController as paletteAlbumCtrl">
		<div class="album-palette-position palette_laf check-element animate-hide">
			<div class="palette_title_block">
				<span class="add"> <!-- TODO to be replaced by an img --> <a href ng-click="paletteAlbumCtrl.add()">+</a> </span>
				<span class="palette_title"> album's Palette </span>
				<span class="fold_unfold"> <!-- TODO to be replaced by an img --> <a href ng-click="paletteAlbumCtrl.changeFolding()">__</a> </span>
				<br />
			</div>

			<!-- TODO loop on album/Picture directives -->
			<div class="palette_content animate-hide" ng-hide="paletteAlbumCtrl.isFolded" >
				<div ng-repeat="album in paletteAlbumCtrl.albums">
					<album></album>
				</div>
			</div>
		</div>
		<!-- palette Picture -->
		<div type="picture" class="img-palette-position" ng-controller="palettePictureController as palettePictureCtrl">
			<div class="palette_laf check-element animate-hide">
				<div class="palette_title_block">
					<span class="add"> <!-- TODO to be replaced by an img --> <a href ng-click="palettePictureCtrl.add()">+</a> </span>
					<span class="palette_title"> Picture's Palette </span>
					<span class="fold_unfold"> <!-- TODO to be replaced by an img --> <a href ng-click="palettePictureCtrl.changeFolding()">__</a> </span>
					<br />
				</div>

				<!-- TODO loop on album/Picture directives -->
				<div class="palette_content animate-hide" ng-hide="palettePictureCtrl.isFolded" >
					<div ng-repeat="picture in palettePictureCtrl.pictures">
						<picture></picture>
					</div>
				</div>
			</div>
		</div>

		<div ng-controller="coordinatesController as coordinatesCtrl"
		class="click-coordinates-position" ng-show="paletteAlbumCtrl.showClickCoordinates">
			<div class="modal-header">
				<h3 class="modal-title" ng-click="coordinatesCtrl.getCoordinates()">Click on picture's location</h3>
			</div>
			<div class="modal-body">
				<label>Latitude: </label>
				<input type="text" ng-model="coordinatesCtrl.coordinates.latitude"/>
				<br>

				<label>Longitude</label>
				<input type="text" ng-model="coordinatesCtrl.coordinates.longitude"/>
			</div>
			<div class="modal-footer">
				<button class="btn btn-primary" ng-disabled="coordinatesCtrl.waitCoordinates" ng-click="coordinatesCtrl.save()">
					Save
				</button>
				<button class="btn btn-primary" ng-click="coordinatesCtrl.cancel()">
					Canel
				</button>
			</div>
		</div>

	</div>

	<div class="preloading-position" ng-show="tripMapCtlr.loading">
		<img src="assets/preloader.gif"/>
	</div>
</div>


